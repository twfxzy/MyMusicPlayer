<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:layout_marginTop="210dp"
    android:layout_marginRight="8dp"
    android:alpha="0.8"
    android:gravity="left"
    android:background="@drawable/color_dialog_shape">

    <TextView
        android:id="@+id/btnSettingsChooseDir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text=" 选 择 目 录 "
        android:textSize="20sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/color_item_pressed"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/splitLine"
        android:layout_margin="3dp" />
    <TextView
        android:id="@+id/btnSettingsSetBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text=" 换 个 背 景 "
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/color_item_pressed"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/splitLine"
        android:layout_margin="3dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp">
        <RadioButton
            android:id="@+id/btnSettingsOrderPlay"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="顺序播放"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/btnSettingsSingleLoop"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="单曲循环"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/btnSettingsAllLoop"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="全部循环"
            android:textSize="18sp" />
        <RadioButton
            android:id="@+id/btnSettingsRandomPlay"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="随机播放"
            android:textSize="18sp" />
    </RadioGroup>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/splitLine"
        android:layout_margin="3dp" />

    <TextView
        android:id="@+id/btnSetSleepTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text=" 睡 眠 定 时 "
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/color_item_pressed"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/splitLine"
        android:layout_margin="3dp" />

    <TextView
        android:id="@+id/btnSettingsAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text=" 关 于 应 用"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/color_item_pressed"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/splitLine"
        android:layout_margin="3dp" />
    <TextView
        android:id="@+id/exitBCMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:text="退   出"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/color_item_pressed"/>
</LinearLayout>
