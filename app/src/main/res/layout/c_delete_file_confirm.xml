<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:alpha="0.8"
    android:orientation="vertical"
    android:background="@drawable/color_dialog_shape"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/deleteFileInfo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="测试文字"
        android:textSize="16sp"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:id="@+id/deleteFileConfirm"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/button_icon_confirm"
            android:scaleType="centerInside"
            android:background="@drawable/color_button_pressed" />
        <ImageButton
            android:id="@+id/deleteFileCancel"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/button_icon_cancel"
            android:scaleType="centerInside"
            android:background="@drawable/color_button_pressed" />

    </LinearLayout>


</LinearLayout>
